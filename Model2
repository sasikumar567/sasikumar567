
#include<stdio.h>
#include<string.h>
int main()
{
	char s[50];x
	int i,c=0;
	printf("Enter string : ");
	gets(s);
	int n=strlen(s);
	for(i=0;i<n;i++)
	{
		if(s[i]=='a' or s[i]=='e' or s[i]=='i' or s[i]=='o' or s[i]=='u' or s[i]=='A' or s[i]=='E' or s[i]=='I' or s[i]=='O' or s[i]=='U')
		{
			c++;
		}
	}
	printf("Number of vowels : %d",c);
}
